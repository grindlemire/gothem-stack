{
    "hosting": {
        "public": "./dist/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/dist/**",
                "destination": "/dist/**"
            },
            {
                "source": "**",
                "run": {
                    "serviceId": "gothem-backend",
                    "region": "us-central1"
                }
            }
        ]
    }
}